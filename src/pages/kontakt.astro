---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Kontakt - Julian Gorreja Gartenbau" description="Kontaktieren Sie Julian Gorreja für eine kostenlose Beratung. Telefon: 0172-9136853">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-green-700 to-green-500 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Kontakt</h1>
        <p class="text-xl max-w-3xl mx-auto">
          Rufen Sie uns an für eine kostenlose Beratung und ein unverbindliches Angebot
        </p>
      </div>
    </div>
  </section>

  <!-- Kontakt Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      
      <!-- Telefon Kontakt -->
      <div class="bg-green-50 border-2 border-green-200 rounded-xl p-12 mb-12">
        <div class="mb-8">
          <div class="bg-green-100 p-6 rounded-full w-24 h-24 mx-auto mb-6 flex items-center justify-center">
            <svg class="w-12 h-12 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-green-800 mb-4">
            Jetzt anrufen
          </h2>
          <a href="tel:0172-9136853" class="text-5xl md:text-6xl font-bold text-green-600 hover:text-green-700 transition-colors block mb-6">
            0172-9136853
          </a>
          <p class="text-xl text-stone-600 mb-8">
            Direkter Kontakt zu Julian Gorreja - Ihr Experte für Garten- und Landschaftsbau
          </p>
        </div>
        
        <!-- Call-to-Action Button -->
        <a href="tel:0172-9136853" class="inline-block bg-green-600 text-white px-12 py-4 rounded-lg text-xl font-semibold hover:bg-green-700 transition-colors shadow-lg hover:shadow-xl">
          📞 Jetzt anrufen
        </a>
      </div>

      <!-- Öffnungszeiten -->
      <div class="bg-stone-50 rounded-lg p-8 mb-12">
        <h3 class="text-2xl font-bold text-stone-900 mb-6">Öffnungszeiten</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-lg">
          <div class="text-center">
            <div class="font-semibold text-stone-900 mb-2">Montag - Freitag</div>
            <div class="text-green-600 font-bold text-xl">7:00 - 17:00 Uhr</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-stone-900 mb-2">Samstag</div>
            <div class="text-green-600 font-bold text-xl">8:00 - 14:00 Uhr</div>
          </div>
          <div class="text-center">
            <div class="font-semibold text-stone-900 mb-2">Sonntag</div>
            <div class="text-stone-600 text-lg">Nach Vereinbarung</div>
          </div>
        </div>
      </div>

      <!-- Adresse -->
      <div class="bg-stone-50 rounded-lg p-8 mb-12">
        <h3 class="text-2xl font-bold text-stone-900 mb-6">Unser Standort</h3>
        <div class="flex items-center justify-center mb-4">
          <div class="bg-green-100 p-3 rounded-lg mr-4">
            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <address class="not-italic text-xl text-stone-700">
            Werderstr 164<br>
            74074 Heilbronn<br>
            Deutschland
          </address>
        </div>
      </div>

      <!-- Notfallkontakt -->
      <div class="bg-red-50 border border-red-200 rounded-lg p-8">
        <h3 class="text-2xl font-bold text-red-900 mb-4">🚨 Notfall-Service</h3>
        <p class="text-red-700 text-lg mb-4">
          Bei Notfällen (z.B. umgestürzte Bäume) erreichen Sie uns auch außerhalb der Geschäftszeiten:
        </p>
        <a href="tel:0172-9136853" class="text-3xl font-bold text-red-900 hover:text-red-700 transition-colors">
          📞 0172-9136853
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout> 