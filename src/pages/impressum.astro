    </div>
  </section>

  <!-- Impressum Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Angaben nach § 5 TMG -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-stone-900 mb-6">Angaben nach § 5 TMG</h2>
